<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Menusy" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.MenusySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_700</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_200</item>
        <item name="postSplashScreenTheme">@style/Theme.Menusy</item>

        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_700</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>